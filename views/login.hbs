<link rel="stylesheet" href="../static/cssFiles/loginStyles.css">
<div class="container">
    <form id="log-in" action="/login" method="post">
        <h2>Log-In</h2>
        <div class="input-box">
            <span class="icon">
                <ion-icon name="person-outline"></ion-icon>
            </span>
            <input type="text" id="username-login" name="username" required>
            <label for="username">Username</label>
        </div>
        <div class="input-box">
            <span class="icon">
                <ion-icon name="lock-closed-outline"></ion-icon>
            </span>
            <input type="password" id="password-login" name="password"  required>
            <label for="password">Password</label>
        </div>
        <div class="show-password">
            <input type="checkbox" id="show-password-login"> 
            <label for="show-password">Show Password</label>
        </div>
        <div class="remember-me">
            <input type="checkbox" id="remember-me"> 
            <label for="remember-me">Remember me</label>
        </div>
        <button type="submit">Log-In</button>
        <div class="registerPage">
            <p>Don't have an account? &nbsp;</p><a href="/register"> Register</a></div>
    </form>
</div>
<script src="../static/jsFiles/reg_login.js"></script>